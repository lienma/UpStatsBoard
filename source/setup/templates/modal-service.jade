.modal.fade(tabindex=-1, role='dialog', aria-labelledby='addServiceModalLabel')#addServiceModal
  .modal-dialog.modal-lg(role='document')
    .modal-content
      .modal-header
        button(type='button', data-dismiss='modal', aria-label='Close').close
          span(aria-hidden=true) &times;
        h4#addServiceModalLabel #{action}
      .modal-body
        form.form-horizontal
          .row
            .col-md-12
              .form-group
                label(for='addServiceLabel').col-sm-3.control-label Service Name
                .col-sm-7
                  input(type='text', placeholder='Service Name', size=40).form-control#addServiceLabel
              .form-group
                label(for='addServiceHost').col-sm-3.control-label Host Address
                .col-sm-7
                  input(type='text', placeholder='Host Address', size=40).form-control#addServiceHost
              .form-group
                label(for='addServicePortNumber').col-sm-3.control-label Port Number
                .col-sm-7
                  input(type='number', placeholder='Port Number', size=5).form-control#addServicePortNumber
              .form-group
                label(for='addServiceUrl').col-sm-3.control-label Url to Service
                .col-sm-7
                  input(type='text', placeholder='Url to Service').form-control#addServiceUrl
              .form-group
                label.col-sm-3.control-label Require login to follow url
                .col-sm-7
                  .row
                    .btn-group(role='group').btn-group-sm.col-md-8
                      button(type='button', aria-label='Yes', data-model='loginRequired', data-value='true').btn.btn-default.col-md-6.btn-switch.active Yes
                      button(type='button', aria-label='No', data-model='loginRequired', data-value='false').btn.btn-default.col-md-6.btn-switch No
              .form-group
                label(for='addServiceTimeout').col-sm-3.control-label Timeout (in seconds)
                .col-sm-7
                  input(type='number', placeholder='Timeout', size=5, value=30).form-control#addServiceTimeout
      .modal-footer
        button(type='button', data-dimiss='modal').btn.btn-default.btn-close-modal Close
        button(type='button').btn.btn-primary.btn-submit-modal #{action}

