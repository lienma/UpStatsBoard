extends ../layout

block stylesheet
  link(rel='stylesheet', href=locals.webRoot + '/stylesheet/setup.bundle.css?' + locals.seed)

block script
  script(type='text/javascript') Config.uuid = '#{locals.uuid}';
  script(type='text/javascript') Config.setup = { host: '#{locals.host}', port: #{locals.port}, webRoot: '#{locals.webRoot}' };
  script(src=locals.webRoot + '/javascript/setup.bundle.js')

block content
  .container#SetupWizard
    .row
      .h1 UpsBoard Setup Guide

    .row
      .panel.panel-default.wizard
        .panel-heading
          h4.panel-title Welcome to the setup guide for the UpsBoard App
        div
          .btn-group.btn-group-justified.wizard-tabs(role='group', aria-label='Navigation Bar')

        .panel-body
